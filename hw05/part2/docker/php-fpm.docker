FROM php:7.2-fpm

RUN apt-get update && apt-get install -y zlib1g-dev zip libxml2-dev libssl-dev \
    && docker-php-ext-install zip bcmath ctype json mbstring pdo tokenizer xml

RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/bin --filename=composer --quiet

ENV COMPOSER_ALLOW_SUPERUSER 1

WORKDIR /var/www
