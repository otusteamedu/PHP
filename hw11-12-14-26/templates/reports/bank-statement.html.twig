{% extends 'base.html.twig' %}

{% block body %}
    <h1>Hello {{ name }}</h1>
    <form method="POST" action="/reports/bank-statement/generate">
        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    <label>
                        <input type="date" class="form-control" name="from" placeholder="Start date">
                    </label>
                </div>
                <div class="col">
                    <label>
                        <input type="date" class="form-control" name="to" placeholder="End date">
                    </label>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </div>
    </form>
{% endblock %}